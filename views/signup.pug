extends layout

block content
    -data = data || {}


    section#left
        img(src='images/board-game.jpg' alt='Dice')

    section#right
        if errors
            ul.my-errors
                for error in errors
                    li= error.msg
        h1 Sign Up
        form(action="/signup" method="POST" class="form-registration")
            label(for="username") Username:
            input(
                type="username"
                id="username"
                name="username"
                class="form-control"
                value=data.username
            )
            
            label(for="password") Password:
            input(
                type="password"
                id="password"
                name="password"
                class="form-control"
                value=data.password
            )

            input(
                type="submit" 
                value="Submit"
                class="btn btn-lg btn-primary btn-block"
            )